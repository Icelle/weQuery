<% if current_user %>
  <h1>Questions</h1>

  <div>
    <%- if @questions != nil -%>
      <%- @questions.each do |question| -%>
        <%= question.content %><br>
      <%- end -%>
    <%- end -%>
  </div>

  <%= simple_form_for(@question) do |f| %>
    <%= f.input :content, label: 'Question' %>
    <%= f.submit 'Submit' %>
  <% end %>
<% end %>
